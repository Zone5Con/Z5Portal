@inherits avt.MyTokens.Core.ParsingEngine.RazorTemplate
<div>
  <table>
     <thead>
      <tr>
        <th style="text-align:left; width:20%; color:blue;">Sent To</th>
        <th style="text-align:left; width:15%; color:blue;">Cell Phone</th>
        <th style="text-align:left; width:30%; color:blue;">Text Message</th>
        <th style="text-align:left; width:15%; color:blue;">Sent By</th>
        <th style="text-align:left; width:20%; color:blue;">Date Sent</th>
       </tr>
     </thead>
     <tbody>
     @foreach (var row in Text.GetReportData("LoanNumber='[Get:LN]'")) {
      <tr>
        <td style="padding-right: 15px; padding-bottom:10px;">@row.SentTo</td>
        <td style="padding-right: 15px; padding-bottom:10px;">@row.CellPhone</td>
        <td style="padding-right: 15px; padding-bottom:10px;">@row.TextMessage</td>
        <td style="padding-right: 15px; padding-bottom:10px;">@row.SentBy</td>
        <td style="padding-right: 15px; padding-bottom:10px;">@row.DateSent</td>
       </tr>            
       }
    </tbody>
  <table>
</div>  